/* СТАЛО (правильно): */
@apply rounded-xl border border-brand-teal px-6 py-3 text-brand-teal backdrop-blur-sm transition-all;
@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  /* Шрифты управляются через Next.js font optimization */
  --neon-gold: #FFD700;
  --neon-cyan: #00FFFF;

  /* Новая бренд-палитра */
  --color-brand-primary: #0E2931;
  --color-brand-accent: #12484C;
  --color-brand-teal: #2B7574;
  --color-brand-cta: #861211;
  --color-brand-neutral: #E2E2E0;
  --color-brand-surface: #12343A;
  --color-brand-outline: rgba(226, 226, 224, 0.18);
  --color-brand-gradient: linear-gradient(125deg, #0E2931 0%, #12484C 40%, #2B7574 70%, #861211 100%);
}

/* Оптимизация загрузки шрифтов */
@font-face {
  font-family: 'Playfair Display Fallback';
  src: local('Georgia'), local('Times New Roman');
  size-adjust: 100%;
  ascent-override: 95%;
  descent-override: 25%;
  line-gap-override: 0%;
}

@font-face {
  font-family: 'Inter Fallback';
  src: local('-apple-system'), local('BlinkMacSystemFont'), local('system-ui');
  size-adjust: 100%;
  ascent-override: 90%;
  descent-override: 22%;
  line-gap-override: 0%;
}

/* Базовые стили для заголовков с Playfair Display */
@layer base {
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-playfair), Georgia, serif;
  }
  
  h1 {
    @apply text-h1 lg:text-h1-lg font-bold;
    background: var(--color-brand-gradient);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  h2 {
    @apply text-h2 lg:text-h2-lg font-bold;
    background: var(--color-brand-gradient);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  h3 {
    @apply text-2xl font-semibold;
  }
  
  /* Основной текст - Inter 400 */
  body, p {
    font-family: var(--font-inter), system-ui, sans-serif;
    @apply font-normal;
    color: var(--color-brand-neutral);
  }
  
  /* Кнопки - Inter 600 */
  button, .btn, a[class*="btn"] {
    font-family: var(--font-inter), system-ui, sans-serif;
    @apply font-semibold;
  }
}

html, body { 
  height: 100%; 
  scroll-behavior: smooth;
  background-color: var(--color-brand-primary);
}

/* Мобильная оптимизация */
@media (max-width: 640px) {
  html {
    /* Улучшение читаемости текста на мобильных */
    -webkit-text-size-adjust: 100%;
    text-size-adjust: 100%;
  }
  
  body {
    /* Убираем bounce эффект на iOS */
    overscroll-behavior-y: none;
  }
  
  /* Уменьшаем эффекты на мобильных для производительности */
  .glass-panel,
  .glass-neon {
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }
  
  /* Оптимизация размера шрифта - минимум 16px для избежания zoom */
  input[type="text"],
  input[type="email"],
  input[type="tel"],
  textarea,
  select {
    font-size: 16px !important;
  }
  
  /* Упрощаем анимации на мобильных */
  .card-hover:hover {
    transform: none;
  }
  
  /* Убираем сложные эффекты на маленьких экранах */
  .perspective-1000 {
    perspective: none;
  }
}

/* Мобильная оптимизация для очень маленьких экранов */
@media (max-width: 375px) {
  /* Еще больше уменьшаем отступы */
  .container {
    padding-left: 12px;
    padding-right: 12px;
  }
}

/* Ultra-modern dark background with neon grid */
.bg-ultra {
  background-color: #0a0a0f;
  background-image:
    radial-gradient(circle at 20% 10%, rgba(255,215,0,0.08), transparent 40%),
    radial-gradient(circle at 80% 30%, rgba(0,255,255,0.05), transparent 50%),
    radial-gradient(circle at 50% 90%, rgba(201,161,65,0.06), transparent 60%),
    repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(255,255,255,0.01) 2px, rgba(255,255,255,0.01) 4px);
}

/* Glass morphism панели */
.glass-panel {
  @apply rounded-2xl border border-white/10 bg-white/5 shadow-2xl backdrop-blur-xl;
  box-shadow: 
    0 8px 32px 0 rgba(0, 0, 0, 0.37),
    inset 0 1px 0 0 rgba(255, 255, 255, 0.1);
}

.glass-neon {
  @apply glass-panel;
  box-shadow: 
    0 0 20px rgba(255, 215, 0, 0.15),
    0 8px 32px 0 rgba(0, 0, 0, 0.37),
    inset 0 1px 0 0 rgba(255, 255, 255, 0.1);
}

/* Неоновая кнопка */
.btn-neon {
  @apply relative inline-flex items-center justify-center rounded-xl bg-gradient-to-r from-brand-accent to-brand-teal px-6 py-3 font-medium text-white backdrop-blur-sm transition-all;
  box-shadow: 
    0 12px 30px rgba(14, 41, 49, 0.45),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

.btn-neon:hover {
  @apply from-brand-teal to-brand-accent;
  transform: translateY(-1px);
  box-shadow: 
    0 18px 35px rgba(18, 72, 76, 0.45),
    inset 0 1px 0 rgba(255, 255, 255, 0.15);
}

.btn-outline {
  @apply rounded-xl border border-brand-teal px-6 py-3 text-brand-teal/90 backdrop-blur-sm transition-all;
  box-shadow: 0 0 0 1px rgba(43, 117, 116, 0.15);
}

.btn-outline:hover {
  @apply text-brand-neutral;
  background-color: rgba(43, 117, 116, 0.18);
  box-shadow: 0 15px 35px rgba(18, 72, 76, 0.35);
}

/* Геометрические формы для фона */
.geometric-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
  pointer-events: none;
}

.geometric-shape {
  position: absolute;
  opacity: 0.08;
  background: linear-gradient(135deg, rgba(255,215,0,0.2), transparent);
  border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
  animation: morph 20s ease-in-out infinite, float 15s ease-in-out infinite;
}

@keyframes morph {
  0%, 100% { border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%; }
  50% { border-radius: 70% 30% 30% 70% / 70% 70% 30% 30%; }
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  33% { transform: translate(30px, -30px) rotate(120deg); }
  66% { transform: translate(-20px, 20px) rotate(240deg); }
}

/* Scroll reveal */
.scroll-reveal {
  opacity: 0;
  transform: translateY(40px);
  transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1), 
              transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.scroll-reveal.revealed {
  opacity: 1;
  transform: translateY(0);
}

/* Неоновый текст */
.text-neon {
  color: var(--neon-gold);
  text-shadow: 
    0 0 10px rgba(255, 215, 0, 0.5),
    0 0 20px rgba(255, 215, 0, 0.3),
    0 0 30px rgba(255, 215, 0, 0.2);
}

/* Hover эффект для карточек */
.card-hover {
  @apply transition-all duration-300;
}

.card-hover:hover {
  transform: translateY(-4px);
  box-shadow: 
    0 0 25px rgba(255, 215, 0, 0.2),
    0 12px 40px 0 rgba(0, 0, 0, 0.5),
    inset 0 1px 0 0 rgba(255, 255, 255, 0.15);
}

/* 3D Transform utilities */
.perspective-1000 {
  perspective: 1000px;
}

.rotate-y-2 {
  transform: rotateY(2deg);
}

.preserve-3d {
  transform-style: preserve-3d;
}

/* Performance optimization */
.gpu-accelerated {
  transform: translateZ(0);
  will-change: transform;
  backface-visibility: hidden;
}

.optimize-animations {
  contain: layout style paint;
}

/* Старые классы для совместимости */
.panel { @apply glass-panel; }
.btn-gold { @apply btn-neon; }
.font-elegant { @apply font-display; }
.bg-velvet { @apply bg-ultra; }

/* Utility класс для золотого градиента текста */
.text-gold-gradient {
  background: linear-gradient(135deg, #FFD700 0%, #FDB931 25%, #FFED4E 50%, #F59E0B 75%, #D97706 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* Playfair Display подзаголовки (500) */
.subheading {
  font-family: var(--font-playfair), Georgia, serif;
  @apply font-medium;
}

/* Выравнивание текста логотипа */
.logo-text {
  line-height: 1;
  vertical-align: baseline;
  display: inline-block;
  letter-spacing: -0.02em;
  /* Исправляем выравнивание baseline для кириллицы */
  position: relative;
  top: -0.05em;
}

/* Дополнительная коррекция для font-display */
.font-display {
  /* Нормализуем метрики шрифта для лучшего выравнивания */
  font-feature-settings: 'kern' 1, 'liga' 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}
